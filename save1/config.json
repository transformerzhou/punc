{
    "dataset_reader": {
        "type": "data_reader",
        "max_tokens": 512,
        "text_num": 100,
        "token_indexers": {
            "bert": {
                "type": "pretrained_transformer",
                "model_name": "hfl/chinese-roberta-wwm-ext-large"
            }
        },
        "tokenizer": {
            "type": "pretrained_transformer",
            "model_name": "hfl/chinese-roberta-wwm-ext-large"
        }
    },
    "model": {
        "type": "tagger",
        "embedder": {
            "token_embedders": {
                "bert": {
                    "type": "pretrained_transformer",
                    "model_name": "hfl/chinese-roberta-wwm-ext-large"
                }
            }
        }
    },
    "train_data_path": "data/BCUT/train.txt",
    "validation_data_path": "data/BCUT/test.txt",
    "trainer": {
        "num_epochs": 100,
        "optimizer": {
            "type": "huggingface_adamw",
            "lr": 1e-05
        },
        "patience": 20
    },
    "data_loader": {
        "batch_size": 8,
        "num_workers": 8,
        "shuffle": true
    },
    "distributed": {
        "cuda_devices": [
            0,
            1
        ]
    }
}